    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:padding="16dp"
    android:gravity="bottom">

    <TextView
        android:id="@+id/app_name_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
