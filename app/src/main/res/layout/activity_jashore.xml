<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Jashore"
    android:orientation="vertical">



    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:padding="10dp"

            >
            <ImageView
                android:layout_width="398dp"
                android:layout_height="200dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/khulna"
                android:contentDescription="ijijjjjio"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="What is the history of Jessore Bangladesh?"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                android:text="Jessore is the home to the ancestors of Rabindranath Tagore.
Jashore was the first independent district of Bangladesh in 1971.
 Jessore district was established in 1781. It consists of 8 municipalities,
  8 upazilas, 92 unions, 1,329 mouzas, 1,477 villages and 120 mahallas"

                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Who was the king of Jessore?"
                android:textSize="20dp"
                android:textStyle="bold"


                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                android:text="Pratapaditya king of Jessore and one of the bara-bhuiyans of Bengal.
 Pratapaditya fought against the Mughal imperial army during its inroad into Bengal in the early 17th century
 . His father Shrihari (Shridhar), a Kayastha, was an influential
 officer in the service of daud khan karrani."

                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Why is Jessore famous for?"
                android:textSize="20dp"
                android:textStyle="bold"


                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="10dp"
                android:text="Jessore district is famous for “ Khejur Gur” .
 It is well known for “Jamtala sweet meat ” . This district have many recreation place / Picnic spots,
 such as Jessore picnic corner , Jess Garden , Binodia family park at Jessore Cantonment ,
Monohorpur boat club / park .
Jessore is a food surplus area of Bangladesh."

                android:textSize="20dp" />
        </LinearLayout>


    </ScrollView>

</LinearLayout>